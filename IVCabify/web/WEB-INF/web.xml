<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.proyecto.Controller.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConductorServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.proyecto.Controller.ConductorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehiculosServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.proyecto.Controller.VehiculosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>cr.ac.una.prograiv.proyecto.Controller.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConductorServlet</servlet-name>
        <url-pattern>/ConductorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehiculosServlet</servlet-name>
        <url-pattern>/VehiculosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
